{
  "name": "child-command",
  "version": "1.0.2",
  "description": "Executes a shell command with a Promise API",
  "main": "dist/index.js",
  "repository": "https://github.com/nivrith/child-command",
  "author": "Nivrith <nivrithgomatam@gmail.com>",
  "license": "MIT",
  "keywords": [
    "child-command",
    "promise-shell",
    "exec-promise",
    "exec-async",
    "child-process"
  ],
  "scripts": {
    "compile": "npm run clean && tsc -b",
    "start": "yarn compile && node dist/src/index",
    "test": "nyc mocha --require ts-node/register test/**/*.spec.ts",
    "prepublishOnly": "npm run compile",
    "pretest": "npm run compile",
    "clean": "del-cli dist",
    "docs": "typedoc src",
    "release": "npm run compile && npx np"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "lines": 80,
    "exclude": [
      "test",
      "docs",
      "dist"
    ],
    "check-coverage": true
  },
  "files": [
    "dist"
  ],
  "dependencies": {},
  "engines": {
    "node": ">=8"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "del-cli": "^2.0.0",
    "mocha": "^6.1.4",
    "np": "^5.0.3",
    "nyc": "^14.1.1",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.2"
  }
}
